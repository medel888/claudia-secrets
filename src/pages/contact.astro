---
import Layout from "../layouts/layout.astro";
---

<Layout title="Contacto">
  <main>
    <div class="row justify-content-center">
      <div class="col-5"></div>
      <div class="col-5 p-3 bg-third">
        <div class="border border-light border-5">
          <form class="p-3 p-md-4">
            <div class="mb-3">
              <input
                id=""
                name=""
                type="text"
                placeholder="First Name"
                class="form-control"
              />
            </div>
            <div class="mb-3">
              <input
                id=""
                name=""
                type="text"
                placeholder="Last Name"
                class="form-control"
              />
            </div>
            <div class="mb-3">
              <input
                id=""
                name=""
                type="email"
                placeholder="Email Address"
                class="form-control"
              />
            </div>
            <div class="mb-3">
              <input
                id=""
                name=""
                type="text"
                placeholder="Phone"
                class="form-control"
              />
            </div>
            <div class="mb-3">
              <textarea
                class="form-control"
                id="message"
                name="message"
                placeholder="Enter your massage for us here. We will get back to you within 2 business days."
                rows="4"></textarea>
            </div>
            <button class="w-100 btn btn-lg btn-second" type="submit"
              >Enviar</button
            >
          </form>
        </div>
      </div>
    </div>
  </main>
</Layout>
